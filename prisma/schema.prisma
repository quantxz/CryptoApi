generator client {
  provider = "prisma-client-js"
}
 
datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

//id Ã© a chave publica
model Users {
  id              String    @unique @id
  fullUserName    String
  email           String    @unique
  password        String
  privateKey      String    @unique 
  crypts crypts[]

  @@map("Users")
}

model crypts {
  id        Int       @default(autoincrement()) @id
  cryptId   String    @unique
  user      Users     @relation(fields: [userId], references: [id])
  crypt     String
  cryptKey  String
  userId    String

  @@map("crypt")
}
